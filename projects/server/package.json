{
  "name": "io.oreon.accounting.server",
  "version": "0.0.1",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch --incremental",
    "serve": "node startup-scripts/serve.js",
    "shell": "concurrently -k -n \"firebase,tsc\"-c \"red,blue\" --restart-tries 1 --restart-after 3000 --handle-input \"firebase functions:shell\" \"yarn build:watch\"",
    "start": "node startup-scripts/shell.js",
    "deploy": "yarn build && firebase deploy --only functions",
    "logs": "firebase functions:log",
    "lint": "eslint --fix --ext .js,.ts .",
    "precommit": "lint-staged"
  },
  "engines": {
    "node": "12"
  },
  "main": "dist/index.js",
  "dependencies": {
    "busboy": "^0.3.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "firebase-admin": "^9.3.0",
    "firebase-functions": "^3.11.0",
    "googleapis": "^59.0.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/busboy": "^0.2.3",
    "concurrently": "^5.3.0"
  }
}
