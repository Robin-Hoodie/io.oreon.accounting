{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": ["./types", "../../node_modules/@types"]
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ]
}
